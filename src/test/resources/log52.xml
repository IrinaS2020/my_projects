<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status = "DEBUG">
    <Appenders>
        <File name ="LogToFile" fileName = "loggs/app.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name = "io.testpeo" level ="debug" additivity = "false">
            <AppenderRef ref = "LogToFile"/>
        </Logger>
        <Root level = "info">
            <AppenderRef ref = "LogToFile"/>
        </Root>
    </Loggers>
</Configuration>